{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python main.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 1,
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  },
  "environments": {
    "production": {
      "build": {
        "builder": "NIXPACKS"
      }
    }
  }
}